   "source": [
    "# ==========================================================\n",
    "# rag_indexer.py ‚Äî Compatible LangChain 1.x\n",
    "# ==========================================================\n",
    "import os\n",
    "from langchain_huggingface import HuggingFaceEmbeddings\n",
    "from langchain_community.document_loaders import PyPDFLoader\n",
    "from langchain_text_splitters import RecursiveCharacterTextSplitter\n",
    "from langchain_community.vectorstores import FAISS\n",
    "\n",
    "# Dossiers\n",
    "PDF_DIR =  \"/home/sacko/Documents/Projet_Rag_RH/Donnees\"\n",
    "INDEX_DIR = \"../embeddings/faiss_index\"\n",
    "os.makedirs(INDEX_DIR, exist_ok=True)\n",
    "\n",
    "# Mod√®le d'embedding\n",
    "MODEL = \"sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2\"\n",
    "\n",
    "print(\"üìö Chargement des documents PDF‚Ä¶\")\n",
    "docs = []\n",
    "for file in os.listdir(PDF_DIR):\n",
    "    if file.endswith(\".pdf\"):\n",
    "        loader = PyPDFLoader(os.path.join(PDF_DIR, file))\n",
    "        docs.extend(loader.load())\n",
    "\n",
    "print(f\"‚úÖ {len(docs)} pages charg√©es.\")\n",
    "\n",
    "# D√©coupage en chunks\n",
    "splitter = RecursiveCharacterTextSplitter(chunk_size=500, chunk_overlap=50)\n",
    "texts = splitter.split_documents(docs)\n",
    "print(f\"‚úÇÔ∏è {len(texts)} chunks cr√©√©s.\")\n",
    "\n",
    "# Embeddings + Index\n",
    "embeddings = HuggingFaceEmbeddings(model_name=MODEL)\n",
    "print(\"üî¢ G√©n√©ration de l'index FAISS‚Ä¶\")\n",
    "db = FAISS.from_documents(texts, embeddings)\n",
    "db.save_local(INDEX_DIR)\n",
    "print(f\"‚úÖ Index sauvegard√© dans : {INDEX_DIR}\")"
   ]
  },
